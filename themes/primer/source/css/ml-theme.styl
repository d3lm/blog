html, body {
  font-family: 'Roboto', 'Helvetica', sans-serif;
  margin: 0;
  padding: 0;
  height: 100%;
}

.ml-banner {
  background-color: #03a9f4;
  background: -webkit-linear-gradient(305deg,#0D47A1,#42A5F5);
  background: linear-gradient(145deg,#0D47A1,#42A5F5);
  background-repeat: no-repeat no-repeat;
  background-size: cover;
  background-attachment: fixed;
  padding-top: 4em;
  padding-bottom: 3em;

  a {
    color: #fff;
    &:hover {
      text-decoration: none;
    }
  }
}

.ml-logo {
  font-weight: 400;
  font-size: 45px;

  span {
    font-weight: 500;
  }
}

.ml-tagline {
  color: #fff;
  font-weight: 400;
  font-size: 1em;
  margin-top: -0.5em;
  margin-left: 0.1em;
}

.ml-nav {
  float: right;
  margin-top: -4em;
  a {
    text-decoration: none;
  }
}

.repo-list-item {
  padding-top: 0;
}

.copyright {
  span {
    font-weight: 500;
  }
}

.collection-head {
  background: -webkit-linear-gradient(305deg,#0D47A1,#42A5F5);
  background: linear-gradient(145deg,#0D47A1,#42A5F5);
  background-repeat: no-repeat no-repeat;
  background-size: cover;
  background-attachment: fixed;
  padding-top: 4em;
  padding-bottom: 3em;
}
